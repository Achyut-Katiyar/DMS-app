<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dk"
    tools:context=".Register_activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:text="Create  a  new  account."
        android:textColor="#FF5722"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <EditText
        android:id="@+id/mFullName"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FDFDFD"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/mPassword"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:background="#090909"
        android:backgroundTint="#070707"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textColor="#F8F2F2"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/mEmail"
        app:layout_constraintStart_toStartOf="@+id/mEmail"
        app:layout_constraintTop_toBottomOf="@+id/mEmail" />

    <EditText
        android:id="@+id/mPhone"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="88dp"
        android:background="#090909"
        android:backgroundTint="#070707"
        android:ems="10"
        android:hint="  Phone Number"
        android:inputType="phone"
        android:textColor="#F1ECEC"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/mEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mEmail"
        app:layout_constraintTop_toBottomOf="@+id/mEmail" />

    <EditText
        android:id="@+id/mEmail"
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="#000000"
        android:ems="10"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:textColor="#F8F0F0"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="@+id/mFullName"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/mFullName"
        app:layout_constraintTop_toBottomOf="@+id/mFullName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:background="#000000"
        android:text="  Agreed :"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/mPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mPhone"
        app:layout_constraintTop_toBottomOf="@+id/mPhone" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:background="#000000"
        android:text="CheckBox"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/mPhone"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="@+id/mPhone"
        app:layout_constraintTop_toBottomOf="@+id/mPhone" />

    <Button
        android:id="@+id/btnRegister"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:layout_marginTop="124dp"
        android:background="#97000000"
        android:text="Register"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/mPhone"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="@+id/mPhone"
        app:layout_constraintTop_toBottomOf="@+id/mPhone" />

    <TextView
        android:id="@+id/mLoginBtn"
        android:layout_width="367dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/nosifer"
        android:text="Already have an account? Sign in."
        android:textColor="#FF5722"
        app:layout_constraintEnd_toEndOf="@+id/btnRegister"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="@+id/btnRegister"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/mLoginBtn"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="@+id/mLoginBtn"
        app:layout_constraintTop_toBottomOf="@+id/mLoginBtn"
        tools:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>
